<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mDrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--主布局-->
    <RelativeLayout
        android:id="@+id/fl_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.ashokvarma.bottomnavigation.BottomNavigationBar
            android:id="@+id/bottom_navigation_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
    <!--侧滑菜单-->
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/colorAccent">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_header"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/svg_header_default" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_header"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/dp_5"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_18" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_collection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_24"
            android:drawableLeft="@drawable/svg_collection_drawer"
            android:drawablePadding="@dimen/dp_26"
            android:gravity="center_vertical"
            android:text="收藏"
            android:textColor="@color/txtSuperColor"
            android:textSize="@dimen/dp_16" />

        <TextView
            android:id="@+id/tv_todo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_24"
            android:drawableLeft="@drawable/svg_todo"
            android:drawablePadding="@dimen/dp_26"
            android:gravity="center_vertical"
            android:text="TODO工具"
            android:textColor="@color/txtSuperColor"
            android:textSize="@dimen/dp_16" />

        <TextView
            android:id="@+id/tv_nightMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_24"
            android:drawableLeft="@drawable/svg_night_mode"
            android:drawablePadding="@dimen/dp_26"
            android:gravity="center_vertical"
            android:text="夜间模式"
            android:textColor="@color/txtSuperColor"
            android:textSize="@dimen/dp_16" />

        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_24"
            android:drawableLeft="@drawable/svg_setting"
            android:drawablePadding="@dimen/dp_26"
            android:gravity="center_vertical"
            android:text="设置"
            android:textColor="@color/txtSuperColor"
            android:textSize="@dimen/dp_16" />

        <TextView
            android:id="@+id/tv_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_24"
            android:drawableLeft="@drawable/svg_about"
            android:drawablePadding="@dimen/dp_26"
            android:gravity="center_vertical"
            android:text="关于我们"
            android:textColor="@color/txtSuperColor"
            android:textSize="@dimen/dp_16" />


    </LinearLayout>

</android.support.v4.widget.DrawerLayout>